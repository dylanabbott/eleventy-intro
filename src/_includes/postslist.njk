<ul reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.pageTitle %}{{ post.data.pageTitle }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>:
    <time class="post-meta" datetime="{{ post.date }}">posted on {{ post.date | toUTCString }}</time>
    {% for tag in post.data.tags %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
      🏷 <a href="{{ tagUrl | url }}" class="post-meta">{{ tag }}</a>
    {% endfor %}
  </li>
{% endfor %}
</ul>