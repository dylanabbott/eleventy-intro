---
layout: layout.njk
pageTitle: Welcome to my blog!
pagination:
  data: collections.blogpost
  size: 3
  reverse: true
  alias: pages
---

<section class="article-container">
{% for post in pages %}

<article>
	<h2><a href="{{ post.url }}">{{ post.data.pageTitle }}</a></h2>
	<p>{{ post.templateContent | safe }}</p>
	<p class="post-meta">{{ post.data.emoji }}<a href="{{ post.url }}">{{ post.date | toUTCString }}</a></p>
</article>
{% endfor %}


<div class="post-meta">
	{% if pagination.href.previous or pagination.href.next%}
	<hr> {% endif %}
	{% if pagination.href.previous %}
	<a href="{{ pagination.href.previous }}">Newer Posts</a>
	{% endif %} 
	{% if pagination.href.previous and pagination.href.next%} | {% endif %}
	{% if pagination.href.next %}
	<a href="{{ pagination.href.next }}">Older Posts</a>
	{% endif %}
</div>

</section>

<section class="ql-container">
	<h4>Quick Links and Asides</h4>
	{% for post in collections.quicklink %}
	<article class="quicklink">
		{{ post.templateContent | safe }}
		{{ post.data.emoji }}<a href="{{ post.url }}"><span class="ql-meta"> {{ post.date | toUTCString }}</a></span>
	</article>
	{% endfor %}
</section>